{
  "name": "blioxxx/contao-i18nl10n",
  "type": "symfony-bundle",
  "description": "The simplest way to create and manage multi-language sites with Contao 4.9.x and newer.",
  "keywords": [
    "Language",
    "Multilingual",
    "I18N",
    "L10N",
    "Translation"
  ],
  "homepage": "https://www.pirok.net",
  "license": "MIT",
  "authors": [
    {
      "name": "Mirco Kibiger",
      "role": "Developer"
    },
    {
      "name": "Zlatko Nikolov",
      "role": "Developer"
    },
    {
      "name": "Claudio De Facci",
      "email": "claudio@exploreimpact.de",
      "homepage": "https://exploreimpact.de",
      "role": "Developer"
    },
    {
      "name": "Patric Eberle",
      "email": "line-in@derverstaerker.ch",
      "homepage": "http://www.derverstaerker.ch",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^4.9",
    "menatwork/contao-multicolumnwizard": "^3.3.12"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "codeception/codeception": "*",
    "phpmd/phpmd": "^2.12",
    "squizlabs/php_codesniffer": "^3.6",
    "sebastian/phpcpd": "^6.0",
    "phploc/phploc": "^7.0",
    "pdepend/pdepend": "^2.10",
    "theseer/phpdox": "0.12.0"
  },
  "autoload": {
    "psr-4": {
      "Blioxxx\\I18nl10nBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Blioxxx\\I18nl10nBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "contao/manager-plugin": true,
      "contao-community-alliance/composer-plugin": true
    }
  }
}
